<view class="page">
  <view class="box">
    <text class="box-title">预约信息</text>
    <view class="row"><text class="label">课程：</text><text class="value">{{cls ? cls.title : ''}}</text></view>
    <view class="row"><text class="label">时段：</text><text class="value">{{slot ? (slot.startTime + ' ~ ' + slot.endTime) : ''}}</text></view>
  </view>

  <view class="box">
    <text class="box-title">填写资料</text>
    <view class="row">
      <text class="label">姓名</text>
      <input class="input" placeholder="请输入姓名" value="{{form.contactName}}" bindinput="onInputName" />
    </view>
    <view class="row">
      <text class="label">电话</text>
      <input class="input" placeholder="请输入电话" value="{{form.contactPhone}}" bindinput="onInputPhone" />
    </view>
    <view class="row">
      <text class="label">备注</text>
      <input class="input" placeholder="备注(可选)" value="{{form.note}}" bindinput="onInputNote" />
    </view>
  </view>

  <button class="btn" loading="{{submitting}}" bindtap="submit">提交预约</button>
</view>