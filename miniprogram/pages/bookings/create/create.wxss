.page {
  padding: 24rpx;
  background: linear-gradient(180deg, #FFFBEA 0%, #FFFFFF 45%);
  min-height: 100vh;
}

.box {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, .05);
}

.box-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #444;
  margin-bottom: 12rpx;
  display: block;
}

.row {
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}

.label {
  width: 120rpx;
  color: #888;
  font-size: 24rpx;
}

.value {
  flex: 1;
  color: #333;
  font-size: 24rpx;
}

.input {
  flex: 1;
  border: 2rpx solid #FFC107;
  padding: 18rpx;
  border-radius: 18rpx;
  font-size: 26rpx;
}

.btn {
  background: linear-gradient(135deg, #FFE082, #FFC107);
  color: #333;
  border: 0;
  padding: 22rpx;
  border-radius: 24rpx;
}