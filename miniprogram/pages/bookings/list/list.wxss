.page {
  padding: 24rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
}

.loading {
  text-align: center;
  margin-top: 80rpx;
  color: #999;
}

.booking-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, .05);
}

.top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.status {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  background: #FFE082;
  color: #A56F00;
}

.status.canceled {
  background: #eee;
  color: #666;
}

.time {
  font-size: 22rpx;
  color: #666;
  margin-top: 10rpx;
}

.trainer {
  font-size: 22rpx;
  color: #888;
  margin-top: 6rpx;
}