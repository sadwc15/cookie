.page {
  padding: 24rpx;
  background: linear-gradient(180deg, #FFFBEA 0%, #FFFFFF 45%);
  min-height: 100vh;
}

.loading {
  text-align: center;
  margin-top: 80rpx;
  color: #999;
}

.box {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, .05);
  margin-bottom: 24rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
}

.price {
  display: block;
  margin-top: 6rpx;
  font-size: 26rpx;
  color: #FF9800;
}

.desc {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.sub-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #444;
  margin-bottom: 12rpx;
  display: block;
}

.slot {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx;
  border: 2rpx solid #eee;
  border-radius: 18rpx;
  margin-bottom: 14rpx;
}

.slot.selected {
  border-color: #FFC107;
  box-shadow: 0 4rpx 12rpx rgba(255, 193, 7, .25);
}

.remain {
  color: #666;
  font-size: 24rpx;
}

.badge {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
}

.badge.ok {
  background: #DFF5E1;
  color: #2D7A2D;
}

.badge.full {
  background: #EEE;
  color: #666;
}

.empty {
  text-align: center;
  color: #999;
  padding: 20rpx 0;
}

.bottom-bar {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.error {
  color: #D32F2F;
  font-weight: 700;
}

.btn {
  background: linear-gradient(135deg, #FFE082, #FFC107);
  color: #333;
  border: 0;
  padding: 18rpx 32rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
}