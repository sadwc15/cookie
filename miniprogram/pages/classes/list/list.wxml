<view class="page">
  <view class="page-title">课程列表</view>
  <block wx:if="{{loading}}">
    <view class="loading">加载中...</view>
  </block>
  <block wx:else>
    <block wx:for="{{list}}" wx:key="id">
      <view class="card" data-id="{{item.id}}" bindtap="goDetail">
        <view class="card-header">
          <text class="card-title">{{item.title}}</text>
          <text class="card-price">¥{{item.priceYuan}}</text>
        </view>
        <view class="card-body">
          <text class="card-desc">{{item.description}}</text>
          <text class="card-time">{{item.startTime}} - {{item.endTime}}</text>
        </view>
        <view class="card-footer">
          <text class="badge capacity">容量: {{item.capacity}}</text>
          <text class="badge trainer">教练ID: {{item.trainerId}}</text>
        </view>
      </view>
    </block>
  </block>
</view>