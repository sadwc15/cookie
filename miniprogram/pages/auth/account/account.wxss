.page {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FFE082, #FFC107);
}

.login-card {
  width: 86%;
  background: #fff;
  padding: 40rpx 32rpx;
  border-radius: 32rpx;
  box-shadow: 0 10rpx 28rpx rgba(0, 0, 0, .15);
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 32rpx;
  text-align: center;
  color: #444;
}

.form-row {
  display: flex;
  align-items: center;
  margin: 16rpx 0;
}

.label {
  width: 140rpx;
  color: #888;
  font-size: 26rpx;
}

.input {
  flex: 1;
  border: 2rpx solid #FFC107;
  padding: 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.btn {
  background: linear-gradient(135deg, #FFE082, #FFC107);
  color: #333;
  font-weight: 600;
  border: 0;
  padding: 24rpx;
  border-radius: 24rpx;
  margin-top: 24rpx;
}

.switch {
  text-align: center;
  margin-top: 20rpx;
  color: #FF9800;
}