<view class="page">
  <view class="header">
    <image class="avatar" src="https://dummyimage.com/120x120/ffc107/ffffff&text=U" mode="cover"></image>
    <view class="info">
      <text class="name">{{displayName}}</text>
      <text class="sub">欢迎使用健身管理小程序</text>
    </view>
  </view>

  <view class="menu">
    <block wx:for="{{entries}}" wx:key="title">
      <view class="item" data-url="{{item.url}}" bindtap="go">
        <text class="item-title">{{item.title}}</text>
        <text class="arrow">></text>
      </view>
    </block>
  </view>

  <button class="btn-logout" bindtap="logout">退出登录</button>
</view>