page {
  background-color: #f5f5f5;
}

.container {
  padding: 16rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 16rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.gray {
  color: #888;
}

.link {
  color: #576b95;
}

.btn {
  background: #1aad19;
  color: #fff;
  padding: 16rpx;
  border-radius: 8rpx;
  text-align: center;
}